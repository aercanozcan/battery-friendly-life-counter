<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.apptopus.bflifecounter">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <application
        android:name=".CounterApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="Rush_classes_package"
            android:value="com.apptopus.bflifecounter.model" />
        <meta-data
            android:name="Rush_db_version"
            android:value="1" />
        <meta-data
            android:name="Rush_db_name"
            android:value="player.db" />
        <meta-data
            android:name="Rush_requires_table_annotation"
            android:value="false" />

        <activity
            android:name=".CounterActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>